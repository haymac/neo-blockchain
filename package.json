{
  "name": "neo-blockchain",
  "version": "0.0.2",
  "description": "A collection of packages implementing the NEO blockchain",
  "repository": "https://github.com/neotracker/neo-blockchain",
  "bugs": "https://github.com/neotracker/neo-blockchain/issues",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "lint-staged": {
    "packages/*/src/**/*.js": [
      "prettier --write --single-quote --trailing-comma all",
      "git add"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "scripts": {
    "lint": "eslint packages/*/src/**",
    "flow": "flow",
    "lint-staged": "lint-staged",
    "flow:coverage": "flow-coverage-report -i 'packages/*/src/**/*.js' -t html",
    "precommit": "lint-staged && flow && eslint packages/*/src/**",
    "bootstrap": "yarn run build && lerna bootstrap",
    "build": "rm -rf ./packages/*/lib && ./node_modules/.bin/gulp build",
    "publish": "yarn run build && lerna publish",
    "watch": "./node_modules/.bin/gulp watch",
    "neo-blockchain": "node ./packages/neo-blockchain-bin/lib/bin/neo-blockchain"
  },
  "devDependencies": {
    "babel-cli": "^7.0.0-beta.3",
    "babel-core": "^7.0.0-beta.3",
    "babel-eslint": "^8.0.0",
    "babel-node": "^7.0.0-beta.3",
    "babel-plugin-transform-async-generator-functions": "^7.0.0-beta.3",
    "babel-plugin-transform-class-properties": "^7.0.0-beta.3",
    "babel-plugin-transform-object-rest-spread": "^7.0.0-beta.3",
    "babel-preset-env": "^7.0.0-beta.3",
    "babel-preset-flow": "^7.0.0-beta.3",
    "chalk": "^2.1.0",
    "eslint": "^4.10.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-plugin-flowtype": "^2.35.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.3.0",
    "flow-bin": "^0.57.3",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.0",
    "gulp-newer": "^1.3.0",
    "gulp-plumber": "^1.1.0",
    "gulp-util": "^3.0.8",
    "gulp-watch": "^4.3.11",
    "husky": "^0.14.3",
    "lerna": "^2.2.0",
    "lint-staged": "^4.3.0",
    "merge-stream": "^1.0.1",
    "prettier": "^1.7.4",
    "through2": "^2.0.3"
  }
}
